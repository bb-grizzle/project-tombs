@import url(https://cdn.rawgit.com/moonspam/NanumSquare/master/nanumsquare.css);

*{
	margin: 0;
	padding: 0;
	list-style: none;
	text-decoration: none;
	box-sizing: border-box;
	
	font-family: 'NanumSquare', sans-serif; 
}


/*font init*/
h3{
	font-family: 'NanumSquare', sans-serif; 
	font-size: 1.2em;
	line-height: 1.6;
	font-weight: bolder;
	margin-bottom: 30px;
}
p{
	font-size: 0.8em;
	line-height: 1.6;
}

/*size initiation*/
body{
	width: 100%;
	font-size: 16pt;
	font-family: 'NanumSquare', sans-serif; 
	background-image: url(<%= image_path "png/grid-me-1920x1080.png" %>);
	background-size: 55%;
	overflow-x: hidden;
}

section{
	position: relative;
}
.sec-padding{
	padding: 100px 0px;
	
}

.con{
	width: 70%;
	margin: auto;
}

.about-main{
	height: 100vh;
	background-image: url(<%= image_path "png/about-bg.png" %>);
	background-size: cover;
	background-position: center;
}

/*header------------------*/
header{
	height: 80px;
	position: relative;
	top: 0;
	z-index: 1;
	border-bottom: 1px solid rgba(255,255,255,0.5);
}
header:after{
	clear: both;
	content: "";
	display: block;
}
header .logo img{
	height: 40px;
	margin: 20px 0;
}
header ul{
	float: right;
}
header li{
	float: left;
	font-size: .8em;
	font-weight: lighter;
	line-height: 76px;
	padding: 0 20px;
	margin: 0 10px;
	text-transform: capitalize;
	box-sizing: border-box;
	transition: all .5s ease-in-out;
}

header li:hover a{
	opacity: 1;
}

header .active{
	border-bottom: 4px solid white;
}

header .active a{
	opacity: 1;
	font-weight: bold;
	color: white;
}

header li a{
	opacity: 0.5;
	color: white;
	transition: all .5s ease-in-out;
}

/*main logo*/
.main-wrap{
	position: absolute;
	width: 100%;
	top: 0;
	left: 0;
	display: flex;
	justify-content: center;
	height: 100vh;
	border: 1px solid white;
}
.about-main-logo{
	width: 220px;
}

/*section02*/
.sec02{
	margin-bottom: 60px;
}
.text-wrap{
	width: 40%;
}

/*sec03--------------------------*/
.sec03:after{
	content: "";
	display: block;
	clear: both;
}

.about-mark01{
	height: 50px;
	margin-left: -10px;
	margin-bottom: 10px;
}

.sec03-img{
	float: right;
	position: relative;
	width: 60%;
	height: 348px;
	margin-top: -300px;
	right: -120px;
	overflow: hidden;
}

.icon-con{
	position: relative;
	float: left;
	width: 120px;
	height: 120px;
	margin-right: -6px;
	margin-bottom: -6px;
	opacity: 0;
	transition: all .5s ease-in-out;
}

.icon-border{
	width: 100%;
	height: 100%;
	border: 6px solid black;
	position: absolute;
	left: 0;
	top: 0;
}

.icon-con img{
	width: 100%;
	height: 100%;
	position: absolute;
	left: 0;
}

.sec04-layout{
	display: flex;
	
}

.sec04-img{
	width: 380px;
	height: 380px;
}

.about-mark02{
	height: 50px;
	position: relative;
	left: -20px;
	margin-bottom: 10px;
}

.sec04-right{
	margin-left: 380px;
}

.sec05{
	padding: 200px 0 360px 0;
	display: flex;
	justify-content: center;
}
.sec05-btn{
	width: 300px;
}

footer{
	background-color: black;
	color: white;
}

.foo{
	display: flex;
	align-items: center;
	height: 240px;
}

footer img{
	width:100px;
}

footer p{
	font-weight: lighter;
	font-size: 0.6em;
	line-height: 2;
	margin-left: 30px;
}