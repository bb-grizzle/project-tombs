.design-layout {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100vh;
    
    .btn-next {
    	width: 100%;
        color: #e0e0e0;
        font-size: 0.8em;
        display: inline-block;
        padding: 10px;
        font-weight: bold;
        text-align: center;
        margin-top: 30px;
    }
    
    .icon-border{
		content: "";
		display: block;
		width: 80px;
		height: 80px;
		box-sizing: border-box;
		border: 4.0px solid black;
		position: absolute;
		top: 0;
		left: 0;
		z-index: 1;
		opacity: 0;
		transition: all .3s ease-in-out;
	}
	
	input[type = "radio"]:checked + label .icon-border{
		opacity: 1;
	}
    
    .btn-next-checked {
        color: #000;
    }


	legend{
	  display: none;
	}
	
	fieldset{
	  border: none;
	  padding: 70px 0;
	}
	
	fieldset h4{
	  font-weight: bolder;
	  line-height: 1.6;
	  text-align: center;
	  
	  margin-bottom: 40px;
	}
	
	fieldset h4:after{
	  content: "";
	  display: block;
	  width: 30px;
	  margin: 20px auto 60px auto;
	  height: 4px;
	  background-color: black;
	}
	
	.tran-01{
	  transition: all .5s ease-in-out;
	}
	.tran-02{
	  transition: all .3s ease-in-out;
	}
	
	.con{
	  width: 70%;
	  margin: auto;
	}
	
	.question-row{
	  display: flex;
	  justify-content: center;
	  margin: 20px 0;
	  
	  font-size: 1em;
	  line-height: 2;
	}
	.question-row input{
	  margin: 0 20px;
	  padding: 5px;
	  padding-left: 10px;
	  width: 250px;
	  height: 30px;
	  border: none;
	  border-radius: 2px;
	  background-color: white;
	  
	  box-shadow: 1px 1px 3px rgba(0,0,0,0.16);
	}
	
	.question-row input:focus{
	  box-shadow: 3px 3px 8px rgba(0,0,0,0.4);
	  outline: none;
	}
	
	.q01-02{
	  position: relative;
	  left: 50px;
	}
	
	.q01-03{
	  position: relative;
	  left: 85px;
	}
	.q00 input{
	  display: none;
	}
	
	/*q02~q07 style*/
	.q-wrap{
	  display: flex;
	  justify-content: center;
	}
	.q-wrap:after{
	  content: "";
	  display: block;
	  clear: both;
	}
	.radio-wrap{
	/*	margin-right: -100px;*/
	  position: relative;
	  text-align: center;
	  float: left;
	  margin-left: 150px;
	}
	
	.label-wrap{
	  display: flex;
	  position: relative;
	/*	width: 90%;*/
	  
	  justify-content: center;
	  right: -70px;
	}
	
	.icon-wrap{
	  width: 80px;
	  display: inline-block;
	  vertical-align: top;
	  position: relative;
	  margin: 0 20px;
	  cursor: pointer;
	}
	.q-icon-bg{
	  width: 80px;
	  height: 80px;
	  background-color: white;
	  position: absolute;
	  top: 0;
	  z-index: -1;
	  box-shadow: 1px 1px 3px rgba(0,0,0,0.16);
	  
	/*	box-sizing: border-box;*/
	  border: 0.0px solid black;
	  transition: all .3s ease-in-out;
	}
	
	.q-icon-bg:after{
	  content: "";
	  display: block;
	  width: 80px;
	  height: 80px;
	  box-sizing: border-box;
	  border: 4.0px solid black;
	  position: relative;
	  z-index: 1;
	  opacity: 0;
	  
	  transition: all .3s ease-in-out;
	}
	
	.q-icon{
	/*	icon image*/
	  opacity: 0.5;
	  width: 80px;
	  transition: all .3s ease-in-out;
	  
	}
	
	.q-icon-gif{
	  width: 80px;
	  position: absolute;
	  top: 0;
	  left: 0;
	  
	  transition: all .3s ease-in-out;
	  opacity: 0;
	}
	
	.radio-wrap h5{
	  margin-top: 20px;
	  opacity: 0;
	  margin-bottom: 20px;
	  text-align: center;
	  font-size: 1rem;
	  width: 120px;
	  position: relative;
	  left: -20px;
	  
	  
	  transition: all .3s ease-in-out;
	}
	.q-text{
	  float: left;
	  margin-top: 30px;
	  width: 150px;
	}
	
	.icon-wrap:hover .q-icon{
	}
	.icon-wrap:hover .q-icon-gif{
	  opacity: 0.5;
	/*	display: block;*/
	}
	
	
	input[type = "radio"]:checked + label .q-icon-bg{
	  box-shadow: 3px 3px 8px rgba(0,0,0,0.4);
	}
	input[type = "radio"]:checked + label .q-icon-bg:after{
	  opacity: 1;
	}
	input[type = "radio"]:checked + label .q-icon-gif{
	  opacity: 1;
	}
	input[type = "radio"]:checked + label .q-icon{
	  opacity: 0;
	}
	input[type = "radio"]:checked + label h5{
	  opacity: 1;
	}
	
	/*question 08*/
	
	
	.text-wrap{
	/*	text-align: center;*/
	  position: relative;
	  width: 100%;
	}
	
	.text-wrap > *{
	  position: absolute;
	  left: 50%;
	  transform: translateX(-50%);
	}
	
	#q08{
	  width: 80px;
	  height: 80px;
	  display: inline-block;
	  transition: all .3s ease-in-out;
	  padding: 10px;
	  
	}
	
	#q08:focus{
	  width: 300px;
	  height: 150px;
	  margin-bottom: 100px;
	}
	
	
	#q08-label{
	  opacity: 1;
	  transition: all .3s ease-in-out;
	  position: relative;	
	  z-index: 1;
	  padding: 0;
	  margin: 0;
	  cursor: pointer;
	}
	
	#q08:focus + #q08-label {
	  opacity: 0;
	}
	
	/*submit*/
	.q-submit{
	  text-align: center;
	  padding-bottom: 200px;
	}
	.q-submit input{
	  display: none;
	}
	#btn-wrap img{
	  width: 200px;
	  cursor: pointer;
	}
}